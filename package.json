{
  "name": "auto-detect-indentation",
  "main": "./lib/auto-detect-indentation",
  "version": "0.5.0",
  "description": "Automatically detect indentation of opened files.",
  "author": {
    "name": "Jason Tokoph",
    "email": "jason@tokoph.net"
  },
  "repository": "https://github.com/jtokoph/auto-detect-indentation",
  "license": "MIT",
  "engines": {
    "atom": ">0.50.0"
  },
  "dependencies": {
    "atom-space-pen-views": "^2.0.0",
    "emissary": "1.x"
  },
  "consumedServices": {
    "status-bar": {
      "versions": {
        "^1.0.0": "consumeStatusBar"
      }
    }
  },
  "config": {
    "indentationTypes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "softTabs": {
            "type": "boolean"
          },
          "tabLength": {
            "type": "integer"
          }
        }
      },
      "default": [
        {
          "name": "2 Spaces",
          "softTabs": true,
          "tabLength": 2
        },
        {
          "name": "4 Spaces",
          "softTabs": true,
          "tabLength": 4
        },
        {
          "name": "8 Spaces",
          "softTabs": true,
          "tabLength": 8
        },
        {
          "name": "Tabs (default width)",
          "softTabs": false
        },
        {
          "name": "Tabs (2 wide)",
          "softTabs": false,
          "tabLength": 2
        },
        {
          "name": "Tabs (4 wide)",
          "softTabs": false,
          "tabLength": 4
        },
        {
          "name": "Tabs (8 wide)",
          "softTabs": false,
          "tabLength": 8
        }
      ]
    }
  }
}
